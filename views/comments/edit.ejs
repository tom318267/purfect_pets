<div id="edit-comment">
  <div class="container post-container text-center">
    <h1 class="results text-center display-4"><i class="far fa-comment"></i> Edit Comment</h1>
    <form action="/pets/<%= foundPic_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input type="text" name="comment[text]" class="form-control" value="<%= comment.text %>">
      </div>
      <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
  </div>
</div>





