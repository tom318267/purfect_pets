<% include ../partials/header %>
  <div id="edit-section">
    <div class="container post-contain">
      <h2 id="post-image-text" class="display-3 text-center"><i class="fas fa-camera"></i> Edit <%= foundPic.name %></h2>
      <form action="/pets/<%= foundPic._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Name of Pet</label>
          <input type="text" class="form-control" name="pets[name]" id="name" value="<%= foundPic.name %>">
        </div>
        <div class="form-group">
          <label for="image">Image Upload: </label>
          <input type="text" class="form-control" name="pets[image]" value="<%= foundPic.image %>">
        </div>
        <button class="btn btn-lg btn-block btn-primary">Submit</button>
      </form>
    </div>
  </div>

<% include ../partials/footer %>
