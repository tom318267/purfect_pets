<% include ../partials/header %>
  <div id="post-section">
    <div class="container post-contain">
      <h2 id="post-image-text" class="display-4 text-center"><i class="fas fa-camera"></i> Post your image!</h2>
      <form action="/pets" method="POST">
        <div class="form-group">
          <label for="name">Name of Pet</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="Name">
        </div>
        <div class="form-group">
          <label for="image">Image Upload: </label>
          <input type="text" class="form-control" name="image" placeholder="Image url">
        </div>
        <button class="btn btn-lg btn-block btn-primary">Submit</button>
      </form>
    </div>
  </div>

